<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSolution"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/TvSolution"
        android:textSize="@dimen/tvSolutionWide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt7"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt7"
        app:layout_constraintBottom_toTopOf="@+id/bt4"
        app:layout_constraintEnd_toStartOf="@+id/bt8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSolution" />

    <Button
        android:id="@+id/bt8"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt8"
        app:layout_constraintBottom_toTopOf="@+id/bt5"
        app:layout_constraintEnd_toStartOf="@+id/bt9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt7"
        app:layout_constraintTop_toBottomOf="@+id/tvSolution" />

    <Button
        android:id="@+id/bt9"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt9"
        app:layout_constraintBottom_toTopOf="@+id/bt6"
        app:layout_constraintEnd_toStartOf="@+id/btDivision"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt8"
        app:layout_constraintTop_toBottomOf="@+id/tvSolution" />

    <Button
        android:id="@+id/btDivision"
        style="@style/calcuButtonsRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btDivision"
        app:layout_constraintBottom_toTopOf="@+id/btMultiply"
        app:layout_constraintEnd_toStartOf="@+id/btClear"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt9"
        app:layout_constraintTop_toBottomOf="@+id/tvSolution" />

    <Button
        android:id="@+id/btClear"
        style="@style/calcuButtonsRed"
        android:layout_height="0dp"
        android:text="@string/btClear"
        app:layout_constraintBottom_toTopOf="@+id/btPercent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btDivision"
        app:layout_constraintTop_toBottomOf="@+id/tvSolution"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/bt4"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt4"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        app:layout_constraintEnd_toStartOf="@+id/bt5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt7" />

    <Button
        android:id="@+id/bt5"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt5"
        app:layout_constraintBottom_toTopOf="@+id/bt2"
        app:layout_constraintEnd_toStartOf="@+id/bt6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt4"
        app:layout_constraintTop_toBottomOf="@+id/bt8" />

    <Button
        android:id="@+id/btPercent"
        style="@style/calcuButtonsRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btPercent"
        app:layout_constraintBottom_toTopOf="@+id/btEquals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btMultiply"
        app:layout_constraintTop_toBottomOf="@+id/btClear"
        app:layout_constraintVertical_weight="1" />

    <Button
        android:id="@+id/bt6"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt6"
        app:layout_constraintBottom_toTopOf="@+id/bt3"
        app:layout_constraintEnd_toStartOf="@+id/btMultiply"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt5"
        app:layout_constraintTop_toBottomOf="@+id/bt9" />

    <Button
        android:id="@+id/btMultiply"
        style="@style/calcuButtonsRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btMultiply"
        app:layout_constraintBottom_toTopOf="@+id/btSubtract"
        app:layout_constraintEnd_toStartOf="@+id/btPercent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt6"
        app:layout_constraintTop_toBottomOf="@+id/btDivision" />

    <Button
        android:id="@+id/bt1"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt1"
        app:layout_constraintBottom_toTopOf="@+id/bt0"
        app:layout_constraintEnd_toStartOf="@+id/bt2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt4" />

    <Button
        android:id="@+id/bt2"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt2"
        app:layout_constraintBottom_toTopOf="@+id/bt00"
        app:layout_constraintEnd_toStartOf="@+id/bt3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt1"
        app:layout_constraintTop_toBottomOf="@+id/bt5" />

    <Button
        android:id="@+id/bt3"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt3"
        app:layout_constraintBottom_toTopOf="@+id/btDot"
        app:layout_constraintEnd_toStartOf="@+id/btSubtract"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt2"
        app:layout_constraintTop_toBottomOf="@+id/bt6" />

    <Button
        android:id="@+id/btEquals"
        style="@style/calcuButtonsRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btEquals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btSubtract"
        app:layout_constraintTop_toBottomOf="@+id/btPercent"
        app:layout_constraintVertical_weight="2" />

    <Button
        android:id="@+id/btSubtract"
        style="@style/calcuButtonsRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btSubtract"
        app:layout_constraintBottom_toTopOf="@+id/btSum"
        app:layout_constraintEnd_toStartOf="@+id/btEquals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt3"
        app:layout_constraintTop_toBottomOf="@+id/btMultiply" />

    <Button
        android:id="@+id/bt0"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt00"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt1"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/bt00"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/bt00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btDot"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt0"
        app:layout_constraintTop_toBottomOf="@+id/bt2" />

    <Button
        android:id="@+id/btDot"
        style="@style/calcuButtonsNumbers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btDot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btSum"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt00"
        app:layout_constraintTop_toBottomOf="@+id/bt3" />

    <Button
        android:id="@+id/btSum"
        style="@style/calcuButtonsRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/btSum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btEquals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btDot"
        app:layout_constraintTop_toBottomOf="@+id/btSubtract" />

</androidx.constraintlayout.widget.ConstraintLayout>